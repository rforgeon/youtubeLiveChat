<h1>Live Events</h1>

<div class="row">
  <div class="col-md-8">
      <%@youtube_handlers.each do |event| %>
        <div class="media">
          <div class="media-body">
            <h4 class="media-heading">
              <div>
                <%= link_to event.name, event %>
                <%= event.script %>
              </div>
            </h4>
          </div>
        </div>
      <% end %>

  <div style="margin-top:20px">
    <%= link_to "New Live Event", new_youtube_handler_path, class: 'btn btn-success' %>
  </div>

</div>
